# LibreTime API connection
# Use container name for Docker network access
LIBRETIME_URL=http://libretime-api-1:9001/api/v2
LIBRETIME_API_KEY=changeme

# AzuraCast API connection
AZURACAST_URL=https://radio.gayphx.com/api
AZURACAST_API_KEY=changeme

# Database (PostgreSQL)
POSTGRES_URI=postgresql://librelog:password@localhost:5432/librelog

# Optional Redis or Celery broker (for async tasks)
